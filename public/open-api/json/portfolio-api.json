{
  "openapi": "3.1.0",
  "info": {
    "title": "Portfolio REST API",
    "description": "REST API server for handling [www.maciejakmateusz.pl](https://www.maciejakmateusz.pl) portfolio, it handles necessary communication for the webpage to work.\n\n### Technologies used:\n- Spring Boot 3.x.x\n- Spring Security 6.x.x\n- Java 21\n- iTextPDF 5.5.13.3\n- Lombok",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://my-portfolio-rest-production.up.railway.app"
    }
  ],
  "tags": [
    {
      "name": "GitHub Activity",
      "description": "Get contributions from GitHub API"
    },
    {
      "name": "Air Quality",
      "description": "Endpoints related to AirQuality project"
    },
    {
      "name": "ToleranceMeasure",
      "description": "Endpoints related to ToleranceMeasure project"
    },
    {
      "name": "AI Translator",
      "description": "Endpoints for AI Translator project"
    },
    {
      "name": "Contact",
      "description": "Endpoints for sending an email through contact form"
    }
  ],
  "paths": {
    "/api/contributions": {
      "post": {
        "tags": [
          "GitHub Activity"
        ],
        "summary": "POST api/contributions",
        "operationId": "post_contributions",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/YearRange"
              },
              "example": {
                "yearBegin": "2025-01-01T00:00:00Z",
                "yearEnd": "2025-12-31T23:59:59Z"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "options": {
        "tags": [
          "GitHub Activity"
        ],
        "summary": "OPTIONS api/contributions",
        "operationId": "options_api",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/aq/countries": {
      "get": {
        "tags": [
          "Air Quality"
        ],
        "summary": "GET api/aq/countries",
        "operationId": "get_aq_countries",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/aq/locations": {
      "post": {
        "tags": [
          "Air Quality"
        ],
        "summary": "POST api/aq/locations",
        "operationId": "post_aq_locations",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "integer",
                "format": "int32",
                "example": 156
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/aq/measurements": {
      "post": {
        "tags": [
          "Air Quality"
        ],
        "summary": "POST api/aq/measurements",
        "operationId": "post_aq_measurements",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "sensorIds": {
                    "type": "array",
                    "items": {
                      "type": "integer"
                    },
                    "example": "473, 472"
                  },
                  "dateFrom": {
                    "type": "string",
                    "format": "date",
                    "example": "2024-01-01"
                  },
                  "dateTo": {
                    "type": "string",
                    "format": "date",
                    "example": "2024-01-31"
                  }
                },
                "required": [
                  "sensorIds",
                  "dateFrom",
                  "dateTo"
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/aq": {
      "options": {
        "tags": [
          "Air Quality"
        ],
        "summary": "OPTIONS api/aq",
        "operationId": "options_aq",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/tolerance-measure/calculate": {
      "post": {
        "tags": [
          "ToleranceMeasure"
        ],
        "summary": "POST api/tolerance-measure/calculate",
        "operationId": "post_tolerance_measure_calculate",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "productLength": {
                    "type": "number",
                    "format": "float"
                  },
                  "negTolerance": {
                    "type": "number",
                    "format": "float"
                  },
                  "posTolerance": {
                    "type": "number",
                    "format": "float"
                  },
                  "measurements": {
                    "type": "array",
                    "items": {
                      "type": "number",
                      "format": "float"
                    }
                  }
                },
                "required": [
                  "productLength",
                  "negTolerance",
                  "posTolerance",
                  "measurements"
                ]
              },
              "example": {
                "productLength": 60,
                "negTolerance": -0.7,
                "posTolerance": 0.5,
                "measurements": [
                  61,
                  60.2,
                  60.1,
                  59.8,
                  60,
                  60.1,
                  59.4
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/tolerance-measure": {
      "options": {
        "tags": [
          "ToleranceMeasure"
        ],
        "summary": "OPTIONS api/tolerance-measure",
        "operationId": "options_tolerance_measure",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/translator/translate": {
      "post": {
        "tags": [
          "AI Translator"
        ],
        "summary": "POST /api/translator/translate",
        "operationId": "post_translate",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "text": {
                    "type": "string",
                    "example": [
                      "Hello, world!"
                    ]
                  },
                  "source_lang": {
                    "type": "string",
                    "example": "EN"
                  },
                  "target_lang": {
                    "type": "string",
                    "example": "DE"
                  },
                  "context": {
                    "type": "string",
                    "example": "General conversation"
                  }
                },
                "required": [
                  "text",
                  "source_lang",
                  "target_lang",
                  "context"
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/translator": {
      "options": {
        "tags": [
          "AI Translator"
        ],
        "summary": "OPTIONS api/translate",
        "operationId": "options_translate",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/email": {
      "post": {
        "tags": [
          "Contact"
        ],
        "summary": "POST api/email",
        "operationId": "post_email",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "from": {
                    "type": "string",
                    "description": "The sender's firstname and surname",
                    "example": "John Smith"
                  },
                  "subject": {
                    "type": "string",
                    "description": "The subject of the email",
                    "example": "Website Inquiry"
                  },
                  "text": {
                    "type": "string",
                    "description": "The email body content",
                    "example": "Hello, I would like to know more about your services."
                  }
                },
                "required": [
                  "from",
                  "subject",
                  "text"
                ]
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "options": {
        "tags": [
          "Contact"
        ],
        "summary": "OPTIONS api/email",
        "operationId": "options_email",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "YearRange": {
        "type": "object",
        "properties": {
          "yearBegin": {
            "type": "string",
            "format": "date-time"
          },
          "yearEnd": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "MeasurementsDTO": {
        "type": "object",
        "properties": {
          "productLength": {
            "type": "number",
            "format": "decimal"
          },
          "negTolerance": {
            "type": "number",
            "format": "decimal"
          },
          "posTolerance": {
            "type": "number",
            "format": "decimal"
          },
          "measurements": {
            "type": "array",
            "items": {
              "type": "number",
              "format": "decimal"
            }
          }
        }
      }
    }
  }
}