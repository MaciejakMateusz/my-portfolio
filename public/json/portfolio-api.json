{
  "openapi": "3.0.3",
  "info": {
    "title": "Portfolio REST API",
    "description": "REST API server for handling www.maciejakmateusz.pl portfolio, it handles necessary communication for the webpage to work.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://my-portfolio-rest-production.up.railway.app"
    }
  ],
  "tags": [
    {
      "name": "GitHub Activity",
      "description": "Get contributions from GitHub API"
    },
    {
      "name": "Air Quality",
      "description": "Endpoints related to AirQuality project"
    },
    {
      "name": "ToleranceMeasure",
      "description": "Endpoints related to ToleranceMeasure project"
    },
    {
      "name": "AI Translator",
      "description": "Endpoints for AI Translator project"
    },
    {
      "name": "Contact",
      "description": "Endpoint for sending an email through contact form"
    }
  ],
  "paths": {
    "/api/contributions": {
      "post": {
        "tags": [
          "GitHub Activity"
        ],
        "summary": "POST api/contributions",
        "operationId": "post_contributions",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/YearRange"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "options": {
        "tags": [
          "GitHub Activity"
        ],
        "summary": "OPTIONS api/contributions",
        "operationId": "options_api",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/aq": {
      "options": {
        "tags": [
          "Air Quality"
        ],
        "summary": "OPTIONS api/aq",
        "operationId": "options_aq",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/aq/countries": {
      "get": {
        "tags": [
          "Air Quality"
        ],
        "summary": "GET api/aq/countries",
        "operationId": "get_aq_countries",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/aq/locations": {
      "post": {
        "tags": [
          "Air Quality"
        ],
        "summary": "POST api/aq/locations",
        "operationId": "post_aq_locations",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "integer",
                "format": "int32"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/aq/measurements": {
      "post": {
        "tags": [
          "Air Quality"
        ],
        "summary": "POST api/aq/measurements",
        "operationId": "post_aq_measurements",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "string"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/tolerance-measure": {
      "options": {
        "tags": [
          "ToleranceMeasure"
        ],
        "summary": "OPTIONS api/tolerance-measure",
        "operationId": "options_tolerance_measure",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/tolerance-measure/calculate": {
      "post": {
        "tags": [
          "ToleranceMeasure"
        ],
        "summary": "POST api/tolerance-measure/calculate",
        "operationId": "post_tolerance_measure_calculate",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MeasurementsDTO"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/translate": {
      "post": {
        "tags": [
          "AI Translator"
        ],
        "summary": "POST api/translate",
        "operationId": "post_translate",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "string"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "options": {
        "tags": [
          "AI Translator"
        ],
        "summary": "OPTIONS api/translate",
        "operationId": "options_translate",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/email": {
      "post": {
        "tags": [
          "Contact"
        ],
        "summary": "POST api/email",
        "operationId": "post_email",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "from": {
                    "type": "string",
                    "description": "The sender's firstname and surname",
                    "example": "John Smith"
                  },
                  "subject": {
                    "type": "string",
                    "description": "The subject of the email",
                    "example": "Website Inquiry"
                  },
                  "text": {
                    "type": "string",
                    "description": "The email body content",
                    "example": "Hello, I would like to know more about your services."
                  }
                },
                "required": ["from", "subject", "text"]
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "options": {
        "tags": [
          "Contact"
        ],
        "summary": "OPTIONS api/email",
        "operationId": "options_email",
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "YearRange": {
        "type": "object",
        "properties": {
          "yearBegin": {
            "type": "string"
          },
          "yearEnd": {
            "type": "string"
          }
        }
      },
      "MeasurementsDTO": {
        "type": "object",
        "properties": {
          "measurement": {
            "type": "array",
            "items": {
              "type": "number"
            }
          }
        }
      }
    }
  }
}